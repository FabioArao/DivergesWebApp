# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/diverges_db

# Firebase Admin SDK Configuration
# Replace these with your actual Firebase project credentials
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email@your_project_id.iam.gserviceaccount.com

# Storage Configuration
STORAGE_BUCKET=your_project_id.appspot.com

# Environment Settings
ENVIRONMENT=development

# Security
JWT_SECRET=your_secure_random_secret_key_min_32_chars

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=video/*,application/pdf,application/epub+zip

# Logging
LOG_LEVEL=INFO

# Optional: Additional Configuration
# SENTRY_DSN=your_sentry_dsn
# NEWRELIC_LICENSE_KEY=your_newrelic_license_key
